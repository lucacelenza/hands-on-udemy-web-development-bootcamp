<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog</div>
    <form method="POST" action="/blogs/<%= blog._id %>?_method=PUT" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" autofocus value="<%= blog.title %>">    
        </div>
        
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[imageUrl]" value="<%= blog.imageUrl %>">
        </div>
        
        <div class="field">
            <label>Blog content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        
        <input type="submit" value="Submit" class="ui blue inverted big button">
    </form>
</div>

<% include partials/footer %>