<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.imageUrl %>">
            <div class="content">
                <span><%= blog.createdOn.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
            <div class="extra">
                <a class="ui orange inverted button" href="/blogs/<%= blog._id %>/edit"><i class="edit icon"></i>Edit blog</a>
                <form class="inline-form" method="POST" action="/blogs/<%= blog._id %>?_method=DELETE">
                    <button type="submit" class="ui red inverted button">
                        <i class="erase icon"></i>Delete blog
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>